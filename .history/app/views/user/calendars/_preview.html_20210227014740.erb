<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="top_page">
      <div class="title">
        <h2 class="title_style">予約フォーム</h2>
      </div>

      <div class="tabel_scroll" style="overflow-x: scroll;">
        <table class="table  table-bordered">
          <thead>
            <tr>
              <th scope="col">時間</th>
              <% @month.each do |day| %>
                <th scope="col"><%= l(day, format: :top) %></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @times.each do |time| %>
              <tr>
                <th scope="row"><%= l( time, format: :very_short) %></th>
                <% @month.each.with_index do |day, index| %>
                  <% time_str = time(day, time) %>
                    <% if !RegularDay.call(@calendar, day) && time_str.to_time >= Time.current.since(@calendar.display_time.hours) %>
                      <td class="possible">
                        <i class="far fa-circle" style="color: blue;"></i>
                      </td>
                    <% else %>
                      <td class="impossible">
                        <i class="fas fa-times"></i>
                      </td>
                    <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>