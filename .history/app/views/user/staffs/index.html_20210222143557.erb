<%= render 'layouts/header' %>

<div class="containar">
  <%= link_to "スタッフ新規登録", new_user_calendar_staff_path(current_user, @calendar), class:"btn btn-primary", remote: true %>
  <div id="staff_new_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
  <div class="table-responsive">
      <table class="table">
          <thead>
            <tr>
              <th>id</th>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @staffs.each do |staff| %>
              <tr>
                <th scope="row"><%= staff.id %></th>
                <td><%= staff.name %></td>
                <td>
                  <%= link_to "編集", edit_user_calendar_staff_path(current_user, @calendar, staff), class:"btn btn-success" %>
                  <%= link_to "シフト設定", calendar_staff_staff_shifts_path(@calendar, staff), class:"btn btn-info" %>
                  <%= link_to "削除", user_calendar_staff_path(current_user, @calendar, staff), class:"btn btn-danger", data: { confirm: '削除しますか？' }, method: :delete %>
                </td>
                <div id="staff<%= staff.id %>_edit_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
              </tr>
            <% end %>
          </tbody>
      </table>
  </div>
</div>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

<style>
.containar {
  width: 100%;
  padding-right: 60px;
  padding-left: 60px;
  margin-right: auto;
  margin-left: auto;
}

</style>
