<div class="modal-body">
    <div class="model_errors"></div>
    <table class="table table-hover">
    <thead>
        <tr>
        <th>項目</th>
        <th>設定値</th>
        </tr>
    </thead>
            <%= f.label "画像投稿" %>
            <%= f.file_field :picture %>
    <tbody>
        <tr>
            <th scope="row">コース名<br><span class="badge badge-danger">必須</span></th>
            <td><%= f.text_field :title, class: "form-control", required: "required" %></td>
        </tr>
        <tr>
            <th scope="row">コース説明</th>
            <td><%= f.text_area :description, class: "form-control" %></td>
        </tr>
        <tr>
            <th scope="row">コース時間<br><span class="badge badge-danger">必須</span></th>
            <td><%= f.number_field :course_time, class: "form-control", required: "required" %>分</td>
        </tr>
        <tr>
            <th scope="row">コース料金<br><span class="badge badge-danger">必須</span></th>
            <td><%= f.number_field :charge, class: "form-control", required: "required" %>円</td>
        </tr>
        <tr>
            <th scope="row">税込表示<br>
            <td><%= f.check_box :is_tax_included, class: "form-control" %></td>
        </tr>
        <tr>
            <th scope="row">価格以上表示（円~）<br>
            <td><%= f.check_box :is_more_than, class: "form-control" %></td>
        </tr>
    </tbody>
    </table>
</div>